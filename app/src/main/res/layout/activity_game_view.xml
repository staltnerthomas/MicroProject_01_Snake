<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin_game_view"
    android:paddingRight="@dimen/activity_horizontal_margin_game_view"
    android:paddingTop="@dimen/activity_vertical_margin_game_view"
    android:paddingBottom="@dimen/activity_vertical_margin_game_view"
    android:keepScreenOn="true"
    tools:context="at.mc.android.max.thomas.microproject_01_snake.GameView"
    android:animateLayoutChanges="false">


    <SurfaceView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/game_surface_view"
        android:layout_gravity="center"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:id="@+id/linearLayoutCoordinates">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/game_text_view_score"
            android:id="@+id/game_text_view_score"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_x" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_y"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_z"
            android:layout_gravity="right" />
    </LinearLayout>
</FrameLayout>
