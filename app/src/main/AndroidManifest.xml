<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="at.mc.android.max.thomas.microproject_01_snake" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".StartScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GameView"
            android:label="@string/title_activity_game_view"
            android:parentActivityName=".StartScreen"
            android:theme="@style/GameView">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="at.mc.android.max.thomas.microproject_01_snake.StartScreen" />
        </activity>
    </application>

</manifest>
