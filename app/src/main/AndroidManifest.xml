<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="at.mc.android.max.thomas.microproject_01_snake">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/snake_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".StartScreen"
            android:label="@string/startscreen_title"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GameView"
            android:label="@string/title_activity_game_view"
            android:parentActivityName=".StartScreen"
            android:screenOrientation="portrait"
            android:theme="@style/GameView">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="at.mc.android.max.thomas.microproject_01_snake.StartScreen" />
        </activity>
        <activity
            android:name=".Settings"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".StartScreen"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="at.mc.android.max.thomas.microproject_01_snake.StartScreen" />
        </activity>
    </application>

</manifest>
